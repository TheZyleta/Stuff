<!doctype html>
<html>
<head>
  <style>
    
    #my-canvas { border: 1px solid gray; }
    
  </style>
</head>
<body>
  <canvas id="cav" width="1000" height="1000"></canvas>
  <script>

   m = document.getElementById("cav").getContext("2d")
   pixel = function(x,y,c){m.fillStyle=c; m.fillRect(x,y,5,5)}
  for(var a =-499;a<499;a++){
		for(var b=-499;b<499;b++){
		var x=0,y=0,xtemp,w=500,h=500;
			for(var i=0;i<100;i++){
			xtemp=x*x-y*y + a/250
			y=2*x*y + b/250
			x=xtemp

				if(x>200){pixel(w+a,h-b,"rgb("+ i*0.2 +","+ 0 +","+ i*5 +")");break;}
				else{pixel(w+a,h-b,"rgb(0,0,0)")}
			}
		}
	}
	

    

  </script>
</body>
</html>
